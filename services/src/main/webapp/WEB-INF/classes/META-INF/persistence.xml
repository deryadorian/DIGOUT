<?xml version="1.0" encoding="UTF-8"?>
<persistence version="1.0" xmlns="http://java.sun.com/xml/ns/persistence"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_1_0.xsd">
    <persistence-unit name="digout.unit">
        <provider>org.hibernate.ejb.HibernatePersistence</provider>
        <class>com.digout.model.entity.common.AutoGeneratedIdentifier</class>
        <class>com.digout.model.entity.user.UserEntity</class>
        <class>com.digout.model.entity.user.UserCredentialsEntity</class>
        <class>com.digout.model.entity.user.UserTokenEntity</class>
        <class>com.digout.model.entity.user.UserFollowerEntity</class>
        <class>com.digout.model.entity.user.UserCommentEntity</class>
        <class>com.digout.model.entity.product.ProductEntity</class>
        <class>com.digout.model.entity.product.ProductTagEntity</class>
        <class>com.digout.model.entity.product.ProductCommentEntity</class>
        <class>com.digout.model.entity.product.FavouriteProductEntity</class>
        <class>com.digout.model.entity.common.ApplicationVersionEntity</class>
        <class>com.digout.model.entity.common.AuditLogEntity</class>
        <class>com.digout.model.entity.common.ImageEntity</class>
        <class>com.digout.model.entity.product.ProductMainImageEntity</class>
        <class>com.digout.model.entity.product.ProductSecondaryImageEntity</class>
        <class>com.digout.model.entity.user.UserAddressEntity</class>
        <class>com.digout.model.entity.user.UserMessageEntity</class>
        <class>com.digout.model.entity.user.UserPhoneEntity</class>
        <class>com.digout.model.entity.user.UserConversationEntity</class>
        <class>com.digout.model.entity.user.UserOrderEntity</class>
        <class>com.digout.model.entity.user.UserImageEntity</class>
        <class>com.digout.model.entity.user.IssueEntity</class>
        <class>com.digout.model.entity.common.BankInfoEntity</class>
        <class>com.digout.model.entity.common.BankTransactionFailEntity</class>

        <properties>
            <property name="hibernate.dialect" value="org.hibernate.dialect.MySQL5InnoDBDialect"/>
            <property name="hibernate.show_sql" value="true"/>
            <property name="hibernate.format_sql" value="true"/>
            <property name="hibernate.query.startup_check" value="true"/>
            <!--<property name="hibernate.cache.use_query_cache" value="false"/>-->
            <property name="hibernate.jdbc.batch_size" value="20"/>
            <property name="current_session_context_class" value="thread"/>
            <property name="hibernate.hbm2ddl.auto" value="create-drop"/>
        </properties>
    </persistence-unit>

</persistence>